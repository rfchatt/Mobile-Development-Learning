<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sign_in"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sign_inActivity">


    <!-- Main LinearLayout that gave the white color of background -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:gravity="center"
        />


    <!-- Title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:text="Create an \nAccount"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="35dp"
        android:fontFamily="serif"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


    <!-- user's Email | Username -->
    <EditText
        android:id="@+id/user_email"
        android:layout_width="330dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:hint="Username or Email"
        android:textColorHint="#626262"
        android:textSize="17dp"
        android:textColor="@color/black"
        android:inputType="textEmailAddress"
        android:background="@drawable/border_radius"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"

        android:drawableStart="@drawable/ic_personx"
        android:drawablePadding="10dp"

        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


    <!-- user's Password -->
    <EditText
        android:id="@+id/password"
        android:layout_width="330dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:hint="Password"
        android:textColorHint="#626262"
        android:textSize="17dp"
        android:textColor="@color/black"
        android:inputType="textPassword"
        android:background="@drawable/border_radius"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"

        android:drawableStart="@drawable/ic_lockx"
        android:drawablePadding="10dp"

        app:layout_constraintTop_toBottomOf="@+id/user_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


    <!-- user's Password confirmation -->
    <EditText
        android:id="@+id/confirm_password"
        android:layout_width="330dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:hint="Confirm password"
        android:textColorHint="#626262"
        android:textSize="17dp"
        android:textColor="@color/black"
        android:inputType="textPassword"
        android:background="@drawable/border_radius"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"

        android:drawableStart="@drawable/ic_lockx"
        android:drawablePadding="10dp"

        app:layout_constraintTop_toBottomOf="@+id/password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


    <!-- Confirmation text before Create Account -->
    <TextView
        android:id="@+id/text_confirmation"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:text="By clicking the Register button, you agree \n to the public offer."
        app:layout_constraintTop_toBottomOf="@+id/confirm_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


    <!-- Create Account Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_signin"
        android:layout_width="330dp"
        android:layout_height="70dp"
        android:backgroundTint="#f73657"
        android:layout_marginTop="30dp"
        android:text="Create Account"
        android:textColor="@color/white"
        android:fontFamily="serif"
        android:textStyle="bold"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/text_confirmation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cornerRadius="8dp"/>


    <!-- Text to other options of Sign Up with -->
    <TextView
        android:id="@+id/text_options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:text="- OR continue with -"
        app:layout_constraintTop_toBottomOf="@+id/btn_signin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


    <!-- Group Of the 3 Options of Sign Up with -->
    <LinearLayout
        android:id="@+id/options"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/text_options"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <!-- Sign Up with Google -->
        <ImageButton
            android:layout_width="60dp"
            android:background="@drawable/options_radius"
            android:padding="20dp"
            android:src="@drawable/ic_google"
            android:scaleType="centerInside"
            android:layout_height="match_parent"
            />


        <!-- Space -->
        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>


        <!-- Sign Up with Apple -->
        <ImageButton
            android:layout_width="60dp"
            android:background="@drawable/options_radius"
            android:padding="20dp"
            android:src="@drawable/ic_apple"
            android:scaleType="centerInside"
            android:layout_height="match_parent"
            />


        <!-- Space -->
        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>


        <!-- Sign Up with Facebook -->
        <ImageButton
            android:layout_width="60dp"
            android:background="@drawable/options_radius"
            android:padding="15dp"
            android:src="@drawable/ic_facebook"
            android:scaleType="centerInside"
            android:layout_height="match_parent"
            />

    </LinearLayout>


    <!-- Login Text Option -->
    <LinearLayout
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/options"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/last_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:text="I Already Have an account "
            app:layout_constraintTop_toBottomOf="@+id/options"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>


        <!-- Login word clickable -->
        <TextView
            android:id="@+id/login_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#f83758"
            android:textStyle="bold"
            android:textSize="15dp"
            android:text="Login"
            app:layout_constraintTop_toBottomOf="@+id/options"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>


    
