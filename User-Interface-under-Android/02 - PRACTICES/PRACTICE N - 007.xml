<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".loginActivity">


    <!-- Main LinearLayout that gave the white color of background -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:gravity="center"
        />


    <!-- Title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:text="Welcome \nBack!"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="35dp"
        android:fontFamily="serif"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


    <!-- user's Email | Username -->
    <EditText
        android:id="@+id/user_email"
        android:layout_width="330dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:hint="Username or Email"
        android:textColorHint="#626262"
        android:textSize="17dp"
        android:textColor="@color/black"
        android:inputType="textEmailAddress"
        android:background="@drawable/border_radius"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"

        android:drawableStart="@drawable/ic_personx"
        android:drawablePadding="10dp"

        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


    <!-- user's Password -->
    <EditText
        android:id="@+id/password"
        android:layout_width="330dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:hint="Password"
        android:textColorHint="#626262"
        android:textSize="17dp"
        android:textColor="@color/black"
        android:inputType="textPassword"
        android:background="@drawable/border_radius"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"

        android:drawableStart="@drawable/ic_lockx"
        android:drawablePadding="10dp"

        app:layout_constraintTop_toBottomOf="@+id/user_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


    <!-- forgot Password word clickable -->
    <TextView
        android:id="@+id/forgot_password"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="#f73657"
        android:textSize="15dp"
        android:text="Forgot Password ?"
        android:textAlignment="textEnd"
        app:layout_constraintTop_toBottomOf="@+id/password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


    <!-- Login Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_login"
        android:layout_width="330dp"
        android:layout_height="70dp"
        android:backgroundTint="#f73657"
        android:layout_marginTop="30dp"
        android:text="Login"
        android:textColor="@color/white"
        android:fontFamily="serif"
        android:textStyle="bold"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/forgot_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cornerRadius="8dp"/>


    <!-- Text to other options of Login with -->
    <TextView
        android:id="@+id/text_options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:text="- OR continue with -"
        app:layout_constraintTop_toBottomOf="@+id/btn_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


    <!-- Group Of the 3 Options of Login with -->
    <LinearLayout
        android:id="@+id/options"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/text_options"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <!-- Login with Google -->
        <ImageButton
            android:layout_width="60dp"
            android:background="@drawable/options_radius"
            android:padding="20dp"
            android:src="@drawable/ic_google"
            android:scaleType="centerInside"
            android:layout_height="match_parent"
            />


        <!-- Space -->
        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>


        <!-- Login with Apple -->
        <ImageButton
            android:layout_width="60dp"
            android:background="@drawable/options_radius"
            android:padding="20dp"
            android:src="@drawable/ic_apple"
            android:scaleType="centerInside"
            android:layout_height="match_parent"
            />


        <!-- Space -->
        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>


        <!-- Login with Facebook -->
        <ImageButton
            android:layout_width="60dp"
            android:background="@drawable/options_radius"
            android:padding="15dp"
            android:src="@drawable/ic_facebook"
            android:scaleType="centerInside"
            android:layout_height="match_parent"
            />

    </LinearLayout>


    <!-- Sing Up Text Option -->
    <LinearLayout
        android:layout_width="190dp"
        android:layout_height="60dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/options"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/last_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:text="Create an Account ? "
            app:layout_constraintTop_toBottomOf="@+id/options"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>


        <!-- Sign Up clickable -->
        <TextView
            android:id="@+id/sign_up_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#f83758"
            android:textStyle="bold"
            android:textSize="15dp"
            android:text="Sign Up"
            app:layout_constraintTop_toBottomOf="@+id/options"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>


