<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/payment"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".paymentActivity">


    <!-- Main LinearLayout that gave the white color of background -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        />


    <!-- LinearLayout as a toolbar -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <!-- go back Image Button -->
        <ImageButton
            android:id="@+id/go_back"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_back_arrow"
            android:scaleType="centerInside"
            android:padding="23dp"
            android:backgroundTint="@color/white"
            />


        <!-- toolbar Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Checkout"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="23sp"
            android:fontFamily="serif"
            android:gravity="center_horizontal"
            />

        <View
            android:layout_width="70dp"
            android:layout_height="match_parent"
            />

    </LinearLayout>


    <!-- Main LinearLayout that contains Order, Shipping, Total & Payment linearlayouts -->
    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/header">


        <!-- LinearLayout that contains Order, Shipping, Total linearlayouts -->
        <LinearLayout
            android:id="@+id/order_total"
            android:layout_width="350dp"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:gravity="center">


            <!-- Order LinearLayout -->
            <LinearLayout
                android:id="@+id/order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order"
                    android:fontFamily="serif"
                    android:textSize="20sp"
                    android:textColor="#a8a8a9"
                    />

                <View
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$ 7.000"
                    android:fontFamily="serif"
                    android:textSize="20sp"
                    android:textColor="#a8a8a9"
                    />

            </LinearLayout>


            <!-- Shipping LinearLayout -->
            <LinearLayout
                android:id="@+id/shipping"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

