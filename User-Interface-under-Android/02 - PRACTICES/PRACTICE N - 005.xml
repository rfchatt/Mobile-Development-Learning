<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"

        app:title="Gallery"
        app:menu="@menu/main_menu"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <LinearLayout
        android:id="@+id/icons"
        android:layout_width="370dp"
        android:layout_height="143dp"
        android:orientation="horizontal"
        android:padding="25dp"
        android:layout_weight="1"
        android:layout_marginTop="50dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <ImageButton
            android:id="@+id/java"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:src="@drawable/ic_java"
            android:scaleType="centerInside"
            android:contentDescription="Java"
            android:layout_marginRight="20dp"
            android:padding="0dp"
            />

        <ImageButton
            android:id="@+id/kotlin"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:src="@drawable/ic_kotlin"
            android:scaleType="centerInside"
            android:contentDescription="Kotlin"
            android:layout_marginRight="20dp"
            android:padding="0dp"
            />

        <ImageButton
            android:id="@+id/android"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:src="@drawable/ic_android"
            android:scaleType="centerInside"
            android:contentDescription="Android"
            android:padding="0dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/icons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/Detail_Galery"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text=""
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>


